<html>
<body>
<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input type="submit" value="Sign Out"/>
    </form>
</div>
<div> Adding a product
    <form method="post">
        <input type="text" name="name" placeholder="Product name"/>
        <input type="text" name="description" placeholder="Product Description"/>
        <input type="text" name="category" placeholder="Product category(id) "/>
        <input type="text" name="manufacturer" placeholder="Product manufacturer"/>
        <input type="text" name="price" placeholder="Product price"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit">Insert</button>
    </form>
</div>
<div>List of products
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Product category</th>
            <th scope="col">Manufacturer</th>
            <th scope="col">Price</th>
            <th scope="col">Date added</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {{#products}}
            <tr>
                <th scope="row">{{id}}</th>
                <td align="center">{{productName}}</td>
                <td align="center">{{productDescription}}</td>
                <td align="center">{{category.categoryName}}</td>
                <td align="center">{{productManufacturer}}</td>
                <td align="center">{{price}}</td>
                <td align="center">{{localDate}}</td>
                <td><a href="/product-update/{{id}}">
                    <button type="submit">Edit</button>
                </a></td>
            </tr>
        {{/products}}
        </tbody>
    </table>
    <div> Delete category
        <form method="post" action="/delete-product">
            <input type="text" name="id" placeholder="Enter the id product: "/>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit">Delete</button>
        </form>
    </div>
</div>
</body>
</html>